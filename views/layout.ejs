              loader.classList.add('hidden');
              inner.classList.remove('hidden');
              chatLoaded = true;
              
              // Executar scripts apenas uma vez (Memory Leak Fix)
              if (!chatInitialized) {
                chatInitialized = true;
                console.log('[Modal] Inicializando scripts do chat pela primeira vez');
                
                // Copia e executa cada <script> encontrado no HTML
                Array.from(inner.querySelectorAll('script')).forEach(oldScript => {
                  const newScript = document.createElement('script');
                  if (oldScript.src) {
                    newScript.src = oldScript.src;
                  } else {
                    newScript.textContent = oldScript.textContent;
                  }
                  document.body.appendChild(newScript);
                  document.body.removeChild(newScript);
                });
              } else {
                console.log('[Modal] Chat já inicializado, pulando execução de scripts');
              }
              
              /**
               * Força scroll ao final do container de mensagens
               */
              function forceScrollToBottom() {
                const chatMessages = inner.querySelector('#chat-messages');
                if (chatMessages) {
                  chatMessages.scrollTop = chatMessages.scrollHeight;
                }
              }
              
              // Aguarda TODAS as imagens carregarem antes do scroll
              const images = inner.querySelectorAll('#chat-messages img');
              if (images.length > 0) {
                let loadedCount = 0;
                const totalImages = images.length;
                
                images.forEach(img => {
                  if (img.complete) {
                    // Imagem já carregada (cache)
                    loadedCount++;
                    if (loadedCount === totalImages) {
                      forceScrollToBottom();
                    }
                  } else {
                    // Aguarda carregamento
                    img.addEventListener('load', () => {
                      loadedCount++;
                      if (loadedCount === totalImages) {
                        forceScrollToBottom();
                      }
                    });
                  }
                });
              } else {
                // Sem imagens, scrolla direto
                forceScrollToBottom();
              }
              
              // Múltiplos fallbacks para garantir scroll (rendering async, layouts, etc)
              clearScrollTimers();
              scrollTimers.push(setTimeout(forceScrollToBottom, 50));
              scrollTimers.push(setTimeout(forceScrollToBottom, 150));
              scrollTimers.push(setTimeout(forceScrollToBottom, 300));
              scrollTimers.push(setTimeout(forceScrollToBottom, 600));
              
              // Foca no input do chat (UX)
              const input = inner.querySelector('input[id="message-input"]');
              if (input) {
                setTimeout(() => input.focus(), 100);
              }
            });
        } else {
          // JÁ CARREGADO: mostra conteúdo em cache
          loader.classList.add('hidden');
          inner.classList.remove('hidden');
          
          // Força scroll ao final
          setTimeout(() => {
            const chatMessages = inner.querySelector('#chat-messages');
            if (chatMessages) {
              chatMessages.scrollTop = chatMessages.scrollHeight;
            }
          }, 50);
          
          // Foca no input do chat
          const input = inner.querySelector('input[id="message-input"]');
          if (input) {
            setTimeout(() => input.focus(), 100);
          }
        }
      }

      /**
       * Fecha o modal do chat
       * 
       * O QUE FAZ:
       * - Limpa timers pendentes (memory leak fix)
       * - Esconde modal
       * - Restaura scroll do body
       * - Retorna foco ao botão (acessibilidade)
       */
      function closeModal() {
        clearScrollTimers(); // Memory Leak Fix
        
        modal.classList.add('hidden');
        document.body.classList.remove('overflow-hidden');
        
        // Retorna foco ao botão (acessibilidade)
        chatBtn.focus();
      }

      // Event listeners
      chatBtn.addEventListener('click', openModal);
      closeBtn.addEventListener('click', closeModal);
      
      // Fechar ao clicar fora do modal (no overlay)
      modal.addEventListener('mousedown', function(e) {
        if (e.target === modal) closeModal();
      });
      
      // Fechar com tecla ESC
      document.addEventListener('keydown', function(e) {
        if (!modal.classList.contains('hidden')) {
          if (e.key === 'Escape') closeModal();
        }
      });
    })();
    </script>
    
    <script>
      /**
       * ========================================================================
       * BADGE DE NOTIFICAÇÕES DO CHAT
       * ========================================================================
       * 
       * QUANDO É USADO:
       * - Quando outra pessoa envia uma mensagem no chat
       * - Ao clicar no botão do chat (limpa contador)
       * - Ao entrar na página do chat (limpa contador)
       * 
       * O QUE FAZ:
       * 1. Aguarda Socket.IO global estar disponível
       * 2. Conecta ao evento 'new-message-notification'
       * 3. Quando recebe notificação:
       *    - Verifica se é para o usuário atual
       *    - Verifica se usuário NÃO está na página do chat
       *    - Se ambos verdadeiros:
       *      * Incrementa contador
       *      * Mostra badge vermelho com número
       *      * Faz botão "pulsar" (animate-bounce)
       * 4. Ao clicar no chat: zera contador
       * 5. Se já está no chat: zera contador
       * 
       * PREVENÇÃO DE MEMORY LEAKS:
       * - Usa Socket.IO global (instância única)
       * - Remove listener antigo antes de adicionar novo
       * - Armazena handler em window._badgeMessageHandler
       */
      (function initChatBadge() {
        /**
         * Aguarda Socket.IO global estar disponível
         * (pode ser executado antes do script de Socket.IO carregar)
         */
        if (typeof window.getGlobalSocket !== 'function') {
          console.log('[Badge] Aguardando Socket.IO global...');
          setTimeout(initChatBadge, 100); // Retry em 100ms
          return;
        }
        
        console.log('[Badge] Inicializando badge de notificações');
        
        // Referências DOM
        const badge = document.getElementById('chat-badge');
        const chatBtn = document.getElementById('chat-float-btn');
        const currentUserId = <%= currentUser.id %>;
        
        // Contador de mensagens não lidas
        let unreadCount = 0;
        
        console.log('[Badge] Usuário atual:', currentUserId);
        
        /**
         * Atualiza visual do badge
         * 
         * @param {number} count - Número de mensagens não lidas
         * 
         * O QUE FAZ:
         * - Se count > 0: mostra badge com número (máximo "99+")
         * - Se count = 0: esconde badge
         */
        function updateBadge(count) {
          console.log('[Badge] Atualizando badge:', count);
          unreadCount = count;
          
          if (count > 0) {
            // Mostra "99+" se passar de 99
            badge.textContent = count > 99 ? '99+' : count;
            badge.classList.remove('hidden');
          } else {
            badge.classList.add('hidden');
          }
        }
        
        // Usa Socket.IO global (Memory Leak Fix)
        const socket = window.getGlobalSocket();
        console.log('[Badge] Usando Socket.IO global:', socket.id);
        
        // Remove listener antigo se existir (Memory Leak Fix)
        if (window._badgeMessageHandler) {
          socket.off('new-message-notification', window._badgeMessageHandler);
        }
        
        /**
         * Handler de nova mensagem
         * 
         * QUANDO É CHAMADO:
         * - Servidor emite 'new-message-notification' via Socket.IO
         * 
         * O QUE FAZ:
         * 1. Verifica se mensagem é para o usuário atual (recipientId)
         * 2. Verifica se usuário NÃO está na página do chat
         * 3. Se ambos verdadeiros:
         *    - Incrementa contador
         *    - Atualiza badge
         *    - Faz botão pulsar por 1 segundo
         */
        window._badgeMessageHandler = function(data) {
          console.log('[Badge] Nova mensagem recebida:', data);
          console.log('[Badge] É para mim?', data.recipientId === currentUserId);
          console.log('[Badge] Estou no chat?', window.location.pathname.includes('/chat'));
          
          // Apenas mostrar se for para mim E não estou no chat
          if (data.recipientId === currentUserId && !window.location.pathname.includes('/chat')) {
            console.log('[Badge] Mostrando notificação!');
            updateBadge(unreadCount + 1);
            
            // Animação de "pulsar" no botão (chama atenção)
            chatBtn.classList.add('animate-bounce');
            setTimeout(() => {
              chatBtn.classList.remove('animate-bounce');
            }, 1000);
          }
        };
        
        // Registra listener (armazenado em window para poder remover depois)
        socket.on('new-message-notification', window._badgeMessageHandler);
        
        /**
         * Limpa badge ao clicar no botão do chat
         * (usuário viu as mensagens)
         */
        chatBtn.addEventListener('click', () => {
          console.log('[Badge] Limpando badge ao clicar');
          updateBadge(0);
        });
        
        /**
         * Limpa badge se já está na página do chat
         * (usuário já está vendo as mensagens)
         */
        if (window.location.pathname.includes('/chat')) {
          console.log('[Badge] Na página do chat, limpando badge');
          updateBadge(0);
        }
      })();
    </script>
