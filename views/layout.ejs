    <script>
      /**
       * ========================================================================
       * SOCKET.IO - INSTÂNCIA GLOBAL (SINGLETON)
       * ========================================================================
       * 
       * QUANDO É USADO:
       * - Pelo chat (/chat)
       * - Pelo badge de notificações (layout.ejs)
       * - Por qualquer feature que precise de comunicação real-time
       * 
       * O QUE FAZ:
       * - Cria UMA ÚNICA conexão Socket.IO compartilhada por toda a aplicação
       * - Previne memory leaks causados por múltiplas conexões
       * - Retorna a mesma instância em todas as chamadas
       * - Reconecta automaticamente se a conexão cair
       * 
       * COMO USAR:
       * const socket = window.getGlobalSocket();
       * socket.on('evento', (data) => { ... });
       */
      window._globalSocket = null;
      window.getGlobalSocket = function() {
        // Se não existe socket OU está desconectado, cria novo
        if (!window._globalSocket || !window._globalSocket.connected) {
          console.log('[Socket] Criando nova conexão Socket.IO');
          window._globalSocket = io();
          
          // Log de conexão bem-sucedida
          window._globalSocket.on('connect', () => {
            console.log('[Socket] Conectado:', window._globalSocket.id);
          });
          
          // Log de desconexão
          window._globalSocket.on('disconnect', () => {
            console.log('[Socket] Desconectado');
          });
        }
        return window._globalSocket;
      };
    </script>
