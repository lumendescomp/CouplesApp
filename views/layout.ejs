    <script>
      // Utilitário global de cópia com fallback
      window.copyHelpers = {
        async copy(text) {
          // 1) Tenta fallback síncrono primeiro (preserva gesto do usuário)
          try {
            const ta = document.createElement("textarea");
            ta.value = text;
            ta.setAttribute("readonly", "");
            ta.style.position = "fixed";
            ta.style.opacity = "0";
            document.body.appendChild(ta);
            ta.select();
            const ok = document.execCommand("copy");
            document.body.removeChild(ta);
            if (ok) return true;
          } catch (_) {}
          // 2) Tenta Clipboard API (pode exigir contexto seguro)
          try {
            if (navigator.clipboard && navigator.clipboard.writeText) {
              await navigator.clipboard.writeText(text);
              return true;
            }
          } catch (_) {}
          return false;
        },
      };

      // UI helpers
      window.showFor = function (el, ms = 2000) {
        if (!el) return;
        el.classList.remove("hidden");
        setTimeout(() => el.classList.add("hidden"), ms);
      };
      window.copyAndFlash = async function (ev, text, targetClass) {
        ev && ev.preventDefault && ev.preventDefault();
        const container =
          ev && ev.currentTarget
            ? ev.currentTarget.closest(".invite-row")
            : null;
        const el = container
          ? container.querySelector("." + targetClass)
          : null;
        const ok = await window.copyHelpers.copy(text);
        if (ok) {
          window.showFor(el);
          const toastMsg =
            ev.currentTarget.getAttribute("data-toast") || "Copiado!";
          if (window.showToast) window.showToast(toastMsg);
        }
        return ok;
      };

      // Anexa o token CSRF em todos os requests do htmx
      document.addEventListener("htmx:configRequest", (evt) => {
        const meta = document.querySelector('meta[name="csrf-token"]');
        if (meta) {
          evt.detail.headers["X-CSRF-Token"] = meta.getAttribute("content");
        }
      });
      // Re-inicializa Alpine em conteúdo inserido pelo htmx
      document.addEventListener("htmx:afterSwap", (e) => {
        if (window.Alpine && e && e.detail && e.detail.target) {
          window.Alpine.initTree(e.detail.target);
        }
      });

      // Cleanup de recursos ao sair de páginas específicas
      // IMPORTANTE: beforeSwap acontece ANTES do DOM ser trocado
      document.addEventListener("htmx:beforeSwap", (e) => {
        const targetURL = e.detail.xhr?.responseURL || "";
        const currentPath = window.location.pathname || "";
        
        console.log("[Layout] htmx:beforeSwap - currentPath:", currentPath, "| targetURL:", targetURL);
        
        // Se estava em /album e está indo para outra rota
        if (currentPath.includes("/album") && !targetURL.includes("/album")) {
          console.log("[Layout] ⚠️ Saindo de /album, chamando cleanup...");
          if (typeof window.__albumCleanup === "function") {
            window.__albumCleanup();
          } else {
            console.error("[Layout] window.__albumCleanup não está definido!");
          }
        }

        // Se estava em /corner e está indo para outra rota
        if (currentPath.includes("/corner") && !targetURL.includes("/corner")) {
          console.log("[Layout] Saindo de /corner, limpando recursos...");
          if (typeof window.__CornerInstance?.destroy === "function") {
            window.__CornerInstance.destroy();
          }
        }
      });

      // Adicional: cancelar requisições ao trocar conteúdo
      document.addEventListener("htmx:beforeOnLoad", (e) => {
        const currentPath = window.location.pathname || "";
        const targetURL = e.detail.xhr?.responseURL || "";
        
        // Se está saindo de /album, tentar cancelar requisições pendentes
        if (currentPath.includes("/album") && !targetURL.includes("/album")) {
          console.log("[Layout] htmx:beforeOnLoad - Última tentativa de cleanup");
          
          // Força cancelar TODAS as imagens que ainda estão no DOM
          document.querySelectorAll("#hs-main img").forEach((img) => {
            if (img.src && img.src.includes("/album-photos/")) {
              console.log("[Layout] Forçando cancelamento:", img.src);
              const oldSrc = img.src;
              img.src = "";
              img.removeAttribute("src");
            }
          });
        }
      });
      // Delegação de eventos para botões de copiar (compatível com CSP)
      document.addEventListener("click", async (ev) => {
        const btn = ev.target.closest("[data-copy-text]");
        if (!btn) return;
        ev.preventDefault();
        const text = btn.getAttribute("data-copy-text");
        const container = btn.closest(".invite-row");
        const targetSel = btn.getAttribute("data-flash-target");
        const flashEl =
          container && targetSel ? container.querySelector(targetSel) : null;
        const ok = await window.copyHelpers.copy(text);
        if (ok) {
          window.showFor(flashEl);
          const toastMsg = btn.getAttribute("data-toast") || "Copiado!";
          if (window.showToast) window.showToast(toastMsg);
        }
      });

      // Toast simples reutilizável
      window.showToast = (msg) => {
        const wrap = document.getElementById("hs-toast");
        const box = document.getElementById("hs-toast-msg");
        if (!wrap || !box) return;
        box.textContent = msg;
        wrap.classList.remove("hidden");
        clearTimeout(window.__hsToastTimer);
        window.__hsToastTimer = setTimeout(
          () => wrap.classList.add("hidden"),
          1800
        );
      };

      // Atualiza rótulo do input[file] (perfil) sem inline JS
      document.addEventListener("change", (ev) => {
        const input = ev.target.closest('input[type="file"][data-file-input]');
        if (!input) return;
        const sel = input.getAttribute("data-file-display");
        const out = sel ? document.querySelector(sel) : null;
        if (!out) return;
        const name =
          input.files && input.files[0]
            ? input.files[0].name
            : "Nenhum arquivo escolhido";
        out.textContent = name;
      });

      // Atualização do destaque do link ativo no nav (cliente) para navegações htmx
      function updateActiveNav() {
        try {
          const path = window.location.pathname || "/";
          const links = document.querySelectorAll('nav a[data-nav]');
          links.forEach((a) => {
            const href = a.getAttribute('href') || '';
            const isActive = href !== '/' && (path === href || path.startsWith(href + '/'));
            a.classList.toggle('bg-white/10', isActive);
            a.classList.toggle('text-fuchsia-200', isActive);
            if (isActive) a.setAttribute('aria-current', 'page');
            else a.removeAttribute('aria-current');
          });
        } catch (_) {}
      }
      document.addEventListener('DOMContentLoaded', updateActiveNav);
      document.addEventListener('htmx:afterSwap', updateActiveNav);
    </script>
