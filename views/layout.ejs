      const modal = document.getElementById('chat-modal');
      const modalContent = document.getElementById('chat-modal-content');
      const closeBtn = document.getElementById('chat-modal-close');
      const loader = document.getElementById('chat-modal-loader');
      const inner = document.getElementById('chat-modal-inner');
      
