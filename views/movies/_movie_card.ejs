<div
  class="movie-card glass rounded-lg border border-violet-700/40 bg-white/5 overflow-hidden group hover:border-fuchsia-400/50 transition-all duration-300"
  data-movie-id="<%= movie.id %>"
>
  <!-- Poster -->
  <div class="relative aspect-[2/3] bg-violet-900/20 overflow-hidden">
    <% if (movie.poster_url) { %>
    <img
      src="<%= movie.poster_url %>"
      alt="<%= movie.title %>"
      class="w-full h-full object-cover"
      loading="lazy"
    />
    <% } else { %>
    <div class="w-full h-full flex items-center justify-center">
      <svg
        class="w-16 h-16 text-violet-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"
        />
      </svg>
    </div>
    <% } %>

    <!-- Overlay com ações (aparece no hover) -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-3 gap-2"
    >
      <% if (movie.status === 'watchlist') { %>
      <button
        class="mark-as-watched-btn w-full px-3 py-2 bg-green-600/90 hover:bg-green-600 text-white text-xs rounded-lg transition flex items-center justify-center gap-1"
        data-movie-id="<%= movie.id %>"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          />
        </svg>
        Marcar como assistido
      </button>
      <% } else { %>
      <button
        class="move-to-watchlist-btn w-full px-3 py-2 bg-blue-600/90 hover:bg-blue-600 text-white text-xs rounded-lg transition flex items-center justify-center gap-1"
        data-movie-id="<%= movie.id %>"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"
          />
        </svg>
        Quero assistir de novo
      </button>
      <% } %>
      <button
        class="delete-movie-btn w-full px-3 py-2 bg-red-600/90 hover:bg-red-600 text-white text-xs rounded-lg transition flex items-center justify-center gap-1"
        data-movie-id="<%= movie.id %>"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
          />
        </svg>
        Remover
      </button>
    </div>
  </div>

  <!-- Info -->
  <div class="p-3">
    <h3
      class="font-medium text-violet-100 text-sm line-clamp-2 mb-1"
      title="<%= movie.title %>"
    >
      <%= movie.title %>
    </h3>
    <% if (movie.year) { %>
    <p class="text-xs text-violet-300 mb-2"><%= movie.year %></p>
    <% } %>

    <!-- Ratings (somente para assistidos) -->
    <% if (movie.status === 'watched') { %>
    <div class="space-y-2">
      <!-- Sua avaliação -->
      <div class="flex flex-col gap-1">
        <span class="text-[10px] text-violet-300 font-medium">Sua avaliação</span>
        <div class="flex items-center gap-1" data-movie-id="<%= movie.id %>">
          <% for (let i = 1; i <= 5; i++) { %>
          <button
            class="star-btn p-0 transition-transform hover:scale-110 <%= movie.hasCurrentUserRated ? 'cursor-default' : '' %>"
            data-rating="<%= i %>"
            data-movie-id="<%= movie.id %>"
            <%= movie.hasCurrentUserRated ? 'disabled' : '' %>
          >
            <svg
              class="w-4 h-4 <%= movie.currentUserRating >= i ? 'text-fuchsia-400 fill-fuchsia-400' : 'text-violet-600' %>"
              fill="<%= movie.currentUserRating >= i ? 'currentColor' : 'none' %>"
              stroke="currentColor"
              stroke-width="1.5"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
              />
            </svg>
          </button>
          <% } %>
          <% if (!movie.hasCurrentUserRated) { %>
          <span class="text-[10px] text-violet-400 ml-1">Clique para avaliar</span>
          <% } %>
        </div>
      </div>

      <!-- Avaliação do parceiro -->
      <div class="flex flex-col gap-1">
        <span class="text-[10px] text-violet-300 font-medium">Avaliação do parceiro</span>
        <div class="flex items-center gap-1">
          <% for (let i = 1; i <= 5; i++) { %>
          <svg
            class="w-4 h-4 <%= movie.partnerRating >= i ? 'text-violet-400 fill-violet-400' : 'text-violet-600' %>"
            fill="<%= movie.partnerRating >= i ? 'currentColor' : 'none' %>"
            stroke="currentColor"
            stroke-width="1.5"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
            />
          </svg>
          <% } %>
          <% if (!movie.hasPartnerRated) { %>
          <span class="text-[10px] text-violet-500 ml-1">Ainda não avaliou</span>
          <% } %>
        </div>
      </div>

      <!-- Média (se ambos avaliaram) -->
      <% if (movie.hasCurrentUserRated && movie.hasPartnerRated) { %>
      <div class="text-center pt-1 border-t border-violet-700/30">
        <span class="text-[10px] text-violet-300">Média: </span>
        <span class="text-sm font-bold text-yellow-400">
          <%= ((movie.currentUserRating + movie.partnerRating) / 2).toFixed(1) %>
        </span>
        <span class="text-[10px] text-violet-400">⭐</span>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>
