                <div class="absolute inset-0 bg-gradient-to-b from-transparent via-white/10 to-transparent animate-pulse"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Resultado Final (fora do container de fundo, posiÃ§Ã£o normal) -->
        <div id="roulette-result" class="hidden text-center px-2 sm:px-4 mt-4 sm:mt-6">
          <!-- O conteÃºdo do resultado serÃ¡ inserido aqui via JS -->
