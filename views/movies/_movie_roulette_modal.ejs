          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="p-4 sm:p-6 flex-1 overflow-y-auto">
      <!-- SeleÃ§Ã£o de Filmes -->
      <div id="roulette-selection" class="mb-4 sm:mb-6">
