        </div>
      </div>

      <!-- Roleta Visual -->
      <div id="roulette-spinner" class="hidden relative overflow-hidden">
        <!-- Container com fundo (serÃ¡ escondido quando roleta parar) -->
        <div id="slot-machine-wrapper" class="relative bg-gradient-to-br from-violet-900/40 to-fuchsia-900/40 rounded-xl p-4 sm:p-8 border border-violet-700/30">               

          <!-- Container da Slot Machine -->
          <div id="slot-machine-container" class="relative mx-auto w-full max-w-[280px]" style="height: 432px; perspective: 1000px;">
            
            <!-- Frame decorativo -->
            <div class="absolute inset-0 rounded-xl sm:rounded-2xl border-2 sm:border-4 border-yellow-500/60 bg-gradient-to-br from-yellow-500/10 to-pink-500/10 shadow-xl sm:shadow-2xl shadow-yellow-500/20 z-10 pointer-events-none">
            </div>

            <!-- Janela de visualizaÃ§Ã£o -->
