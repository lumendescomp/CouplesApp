    style="transform: scale(0.9); transition: transform 0.3s ease"
    id="roulette-modal-content"
  >
    <!-- Header -->
    <div class="flex items-center justify-between p-4 sm:p-6 border-b border-violet-700/40 flex-shrink-0">
      <h2 class="text-lg sm:text-2xl font-bold text-violet-100 flex items-center gap-2">
