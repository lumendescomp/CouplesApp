<!-- Modal da Roleta de Filmes -->
<div
  id="movie-roulette-modal"
  class="fixed inset-0 bg-black/70 backdrop-blur-sm z-30 hidden flex items-center justify-center p-2 sm:p-4 pt-16 sm:pt-20"
  style="transition: opacity 0.3s ease"
>
