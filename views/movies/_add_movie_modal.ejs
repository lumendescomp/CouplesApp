<!-- Modal de Adicionar Filme -->
<div
  id="add-movie-modal"
  class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4"
  style="transition: opacity 0.3s ease"
>
  <div
    class="glass rounded-2xl border border-violet-700/40 bg-gradient-to-br from-violet-950/95 to-fuchsia-950/95 w-full max-w-4xl max-h-[90vh] overflow-hidden shadow-2xl flex flex-col"
    style="transform: scale(0.9); transition: transform 0.3s ease"
    id="modal-content"
  >
    <!-- Header -->
    <div
      class="flex items-center justify-between p-6 border-b border-violet-700/40"
    >
      <h2 class="text-xl font-semibold text-violet-100 flex items-center gap-2">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
        Buscar e Adicionar Filme
      </h2>
      <button
        id="close-modal-btn"
        class="p-2 rounded-full hover:bg-white/10 text-violet-100 transition"
        aria-label="Fechar"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
    </div>

    <!-- Content (scrollable) -->
    <div class="flex-1 overflow-y-auto p-6">
      <% if (!tmdbConfigured) { %>
      <!-- Aviso: API não configurada -->
      <div
        class="bg-yellow-500/10 border border-yellow-500/30 rounded-lg p-4 mb-6"
      >
        <div class="flex gap-3">
          <svg
            class="w-6 h-6 text-yellow-400 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            />
          </svg>
          <div>
            <h4 class="text-yellow-100 font-medium mb-1">
              API do TMDB não configurada
            </h4>
            <p class="text-yellow-200/80 text-sm">
              Para buscar filmes automaticamente, adicione
              <code class="bg-black/20 px-1 rounded">TMDB_API_KEY</code> no
              arquivo <code class="bg-black/20 px-1 rounded">.env</code>.
              <a
                href="https://www.themoviedb.org/settings/api"
                target="_blank"
                class="underline hover:text-yellow-100"
                >Obtenha uma chave gratuita aqui</a
              >.
            </p>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Busca -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-violet-200 mb-2">
          Buscar filme
        </label>
        <div class="relative">
          <input type="text" id="search-input" placeholder="Digite o nome do
          filme..." class="w-full px-4 py-3 pr-12 bg-violet-950/50 border
          border-violet-700/40 rounded-lg text-violet-100 placeholder-violet-400
          focus:outline-none focus:ring-2 focus:ring-fuchsia-400/50
          focus:border-fuchsia-400/50 transition" <%= !tmdbConfigured ?
          'disabled' : '' %> />
          <div
            class="absolute right-3 top-1/2 -translate-y-1/2"
            id="search-spinner"
            style="display: none"
          >
            <svg
              class="animate-spin w-5 h-5 text-violet-400"
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              ></circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              ></path>
            </svg>
          </div>
        </div>
        <p class="text-xs text-violet-400 mt-1" id="search-hint">
          <% if (tmdbConfigured) { %> Pressione Enter ou aguarde para buscar <%
          } else { %> Busca desabilitada - configure a API <% } %>
        </p>
      </div>

      <!-- Resultados da busca -->
      <div id="search-results" class="mb-6" style="display: none">
        <h3 class="text-sm font-medium text-violet-200 mb-3">Resultados:</h3>
        <div
          id="results-grid"
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 max-h-96 overflow-y-auto"
        >
          <!-- Cards serão inseridos aqui via JS -->
        </div>
      </div>

      <!-- Ou adicionar manualmente -->
      <div class="border-t border-violet-700/40 pt-6">
        <h3
          class="text-sm font-medium text-violet-200 mb-4 flex items-center gap-2"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
            />
          </svg>
          Ou adicionar manualmente
        </h3>

        <form id="manual-form" class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-violet-200 mb-2">
                Título do filme *
              </label>
              <input
                type="text"
                id="manual-title"
                required
                placeholder="Ex: Matrix"
                class="w-full px-4 py-2 bg-violet-950/50 border border-violet-700/40 rounded-lg text-violet-100 placeholder-violet-400 focus:outline-none focus:ring-2 focus:ring-fuchsia-400/50"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-violet-200 mb-2">
                Ano
              </label>
              <input
                type="number"
                id="manual-year"
                min="1800"
                max="2100"
                placeholder="1999"
                class="w-full px-4 py-2 bg-violet-950/50 border border-violet-700/40 rounded-lg text-violet-100 placeholder-violet-400 focus:outline-none focus:ring-2 focus:ring-fuchsia-400/50"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-violet-200 mb-2">
                Status
              </label>
              <select
                id="manual-status"
                class="w-full px-4 py-2 bg-violet-950/50 border border-violet-700/40 rounded-lg text-violet-100 focus:outline-none focus:ring-2 focus:ring-fuchsia-400/50"
              >
                <option value="watchlist">Quero assistir</option>
                <option value="watched">Já assistimos</option>
              </select>
            </div>

            <!-- Rating (só aparece se status = watched) -->
            <div
              id="manual-rating-container"
              class="md:col-span-2"
              style="display: none"
            >
              <label class="block text-sm font-medium text-violet-200 mb-2">
                Avaliação
              </label>
              <div class="flex gap-2" id="manual-rating-stars">
                <% for (let i = 1; i <= 5; i++) { %>
                <button
                  type="button"
                  class="manual-star-btn p-1 transition-transform hover:scale-125"
                  data-rating="<%= i %>"
                >
                  <svg
                    class="w-8 h-8 text-violet-600"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
                    />
                  </svg>
                </button>
                <% } %>
              </div>
              <input type="hidden" id="manual-rating" value="" />
            </div>

            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-violet-200 mb-2">
                Notas/Comentários
              </label>
              <textarea
                id="manual-notes"
                rows="3"
                placeholder="Suas impressões sobre o filme..."
                class="w-full px-4 py-2 bg-violet-950/50 border border-violet-700/40 rounded-lg text-violet-100 placeholder-violet-400 focus:outline-none focus:ring-2 focus:ring-fuchsia-400/50 resize-none"
              ></textarea>
            </div>
          </div>

          <div class="flex gap-3 justify-end pt-4">
            <button
              type="button"
              id="cancel-manual-btn"
              class="px-6 py-2.5 bg-violet-900/50 hover:bg-violet-900/70 text-violet-100 rounded-lg transition"
            >
              Cancelar
            </button>
            <button
              type="submit"
              class="px-6 py-2.5 bg-gradient-to-r from-violet-600 to-fuchsia-600 hover:from-violet-700 hover:to-fuchsia-700 text-white rounded-lg transition shadow-lg"
            >
              Adicionar filme
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
<%- include('_add_movie_modal_script') %>
</script>
