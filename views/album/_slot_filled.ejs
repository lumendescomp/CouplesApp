<div
  class="slot-content slot-filled relative w-full h-full rounded-lg overflow-hidden group"
>
  <img
    src="<%= filePath %>"
    alt="Foto no slot"
    class="w-full h-full object-cover"
    data-photo-id="<%= photoId %>"
  />

  <!-- Botão de remover (aparece no hover) -->
  <button
    class="slot-remove-btn absolute top-1 right-1 w-6 h-6 bg-red-600/90 hover:bg-red-600 text-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center text-xs"
    data-slot="<%= slotNumber %>"
    title="Remover foto"
  >
    ✕
  </button>
</div>
