<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h1 class="text-xl font-semibold mb-4">Entrar em casal via código</h1>
  <form
    hx-post="/join"
    hx-headers='{"_csrf":"<%= csrfToken %>"}'
    hx-target="#join-feedback"
    class="space-y-3"
  >
      <input
        class="w-full border p-2 rounded font-mono tracking-widest uppercase"
        maxlength="12"
        name="code"
        placeholder="CÓDIGO"
        value="<%= typeof code !== 'undefined' ? code : '' %>"
        required
      />
    <button class="w-full bg-indigo-600 text-white py-2 rounded">Entrar</button>
  </form>
  <div id="join-feedback" class="mt-3 text-sm"></div>
</div>
