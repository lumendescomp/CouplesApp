<div class="glass rounded-lg overflow-hidden border border-violet-700/40 hover:border-fuchsia-400/50 transition-all duration-300">
  <div class="flex gap-4 p-4">
    <!-- Foto do presente (se houver) -->
    <% if (gift.photo_path) { %>
      <div class="flex-shrink-0 w-24 h-24 rounded-lg overflow-hidden bg-violet-900/20">
        <img 
          src="<%= gift.photo_path %>" 
          alt="<%= gift.name %>"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    <% } else { %>
      <div class="flex-shrink-0 w-24 h-24 rounded-lg bg-violet-900/20 flex items-center justify-center">
        <svg class="w-10 h-10 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
        </svg>
      </div>
    <% } %>

    <!-- Informações do presente -->
    <div class="flex-1 min-w-0">
      <h3 class="font-semibold text-violet-100 text-base mb-1 truncate" title="<%= gift.name %>">
        <%= gift.name %>
      </h3>
      
      <% if (gift.link) { %>
        <a 
          href="<%= gift.link %>" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-xs text-fuchsia-400 hover:text-fuchsia-300 inline-flex items-center gap-1 mb-2"
        >
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          <span class="truncate max-w-[200px]">Ver produto</span>
        </a>
      <% } %>
      
      <% if (gift.price) { %>
        <p class="text-sm text-violet-300 font-medium">
          R$ <%= parseFloat(gift.price).toFixed(2).replace('.', ',') %>
        </p>
      <% } %>
      
      <p class="text-xs text-violet-400/70 mt-2">
        Adicionado por <%= gift.added_by_name %>
      </p>
    </div>

    <!-- Botão de remover -->
    <div class="flex-shrink-0">
      <div class="flex flex-col gap-2">
        <button
          class="edit-gift-btn p-2 text-violet-400 hover:text-violet-300 hover:bg-violet-500/10 rounded-lg transition"
          data-gift-id="<%= gift.id %>"
          data-gift-name="<%= gift.name %>"
          data-gift-link="<%= gift.link || '' %>"
          data-gift-price="<%= gift.price || '' %>"
          data-gift-photo="<%= gift.photo_path || '' %>"
          title="Editar presente"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        </button>
        <button
          class="delete-gift-btn p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition"
          data-gift-id="<%= gift.id %>"
          title="Remover presente"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
