<div
  class="border border-violet-700/40 rounded-xl p-3 flex items-center justify-between bg-white/5"
>
  <div>
    <div class="font-mono text-lg tracking-[0.3em] text-violet-200">
      <%= invite.code %>
    </div>
    <div class="text-xs text-violet-300/80">
      Expira em <%= invite.expires_at %>
    </div>
  </div>
  <div class="text-right space-x-2 invite-row">
    <button
      type="button"
      class="text-sm px-3 py-1.5 border border-violet-700/40 rounded-full hover:bg-white/10 text-violet-100"
      data-copy-text="<%= invite.code %>"
      data-flash-target=".msg-code"
      data-toast="Código copiado!"
    >
      Copiar código
    </button>
    <button
      type="button"
      class="text-sm px-3 py-1.5 border border-violet-700/40 rounded-full hover:bg-white/10 text-violet-100"
      data-copy-text="<%= baseUrl %>/join?code=<%= invite.code %>"
      data-flash-target=".msg-link"
      data-toast="Link copiado!"
    >
      Copiar link
    </button>
    <a
      class="text-sm px-3 py-1.5 border border-violet-700/40 rounded-full text-violet-200 hover:bg-white/10"
      href="/join?code=<%= invite.code %>"
      >Abrir link</a
    >
  </div>
</div>
