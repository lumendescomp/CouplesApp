<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h1 class="text-xl font-semibold mb-4">Criar conta</h1>
  <% if (typeof error !== 'undefined') { %>
  <div class="mb-3 text-red-600"><%= error %></div>
  <% } %>
  <form method="post" action="/auth/register" class="space-y-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <input
      class="w-full border p-2 rounded"
      type="email"
      name="email"
      placeholder="E-mail"
      required
    />
    <input
      class="w-full border p-2 rounded"
      type="password"
      name="password"
      placeholder="Senha"
      required
    />
    <button class="w-full bg-indigo-600 text-white py-2 rounded">
      Criar conta
    </button>
  </form>
</div>
