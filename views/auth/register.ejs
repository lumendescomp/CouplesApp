<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-semibold text-violet-200 mb-1">Criar conta</h1>
  <p class="text-sm text-violet-200/80 mb-4">
    Dê o primeiro passo rumo ao amor ✨
  </p>
  <% if (typeof error !== 'undefined') { %>
  <div
    class="mb-3 border border-violet-700/40 bg-white/5 text-violet-100 px-3 py-2 rounded"
  >
    <%= error %>
  </div>
  <% } %>
  <form method="post" action="/auth/register" class="space-y-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <input
      class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-fuchsia-500/40 border-violet-700/40 bg-white/5 text-violet-100 placeholder-violet-300/60"
      type="email"
      name="email"
      placeholder="E-mail"
      required
    />
    <input
      class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-fuchsia-500/40 border-violet-700/40 bg-white/5 text-violet-100 placeholder-violet-300/60"
      type="password"
      name="password"
      placeholder="Senha"
      required
    />
    <button class="w-full btn-heart py-2 rounded-full">Criar conta</button>
  </form>
</div>
