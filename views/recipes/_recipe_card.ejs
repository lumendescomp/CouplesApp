<div class="recipe-card glass rounded-lg border border-violet-700/40 bg-white/5 overflow-hidden group hover:border-fuchsia-400/50 transition-all duration-300" data-recipe-id="<%= recipe.id %>">
  <!-- Foto -->
  <div class="relative aspect-[4/3] bg-violet-900/20 overflow-hidden">
    <% if (recipe.photo_path) { %>
      <img
        src="<%= recipe.photo_path %>"
        alt="<%= recipe.title %>"
        class="w-full h-full object-cover"
        loading="lazy"
      />
    <% } else { %>
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-12 h-12 sm:w-16 sm:h-16 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    <% } %>

    <!-- Overlay com aÃ§Ãµes -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-3 gap-2">
      <button
        class="view-recipe-btn w-full px-3 py-2 bg-violet-600/90 hover:bg-violet-600 text-white text-xs sm:text-sm rounded-lg transition flex items-center justify-center gap-1"
        data-recipe-id="<%= recipe.id %>"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        Ver detalhes
      </button>
      <button
        class="delete-recipe-btn w-full px-3 py-2 bg-red-600/90 hover:bg-red-600 text-white text-xs sm:text-sm rounded-lg transition flex items-center justify-center gap-1"
        data-recipe-id="<%= recipe.id %>"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Remover
      </button>
    </div>
  </div>

  <!-- Info -->
  <div class="p-3 sm:p-4">
    <h3 class="font-medium text-violet-100 text-sm sm:text-base line-clamp-2 mb-2" title="<%= recipe.title %>">
      <%= recipe.title %>
    </h3>

    <% if (recipe.reference_link) { %>
      <a 
        href="<%= recipe.reference_link %>" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-xs text-fuchsia-400 hover:text-fuchsia-300 inline-flex items-center gap-1 mb-3"
        onclick="event.stopPropagation()"
      >
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
        <span class="line-clamp-1">Link da receita</span>
      </a>
    <% } %>

    <!-- AvaliaÃ§Ãµes -->
    <div class="space-y-2">
      <!-- Sua avaliaÃ§Ã£o -->
      <div class="flex flex-col gap-1">
        <span class="text-[10px] text-violet-300 font-medium">Sua avaliaÃ§Ã£o</span>
        <div class="flex items-center gap-1">
          <% for (let i = 1; i <= 5; i++) { %>
            <button
              class="rating-btn p-0 transition-transform hover:scale-110"
              data-rating="<%= i %>"
              data-recipe-id="<%= recipe.id %>"
            >
              <span class="text-lg sm:text-xl <%= recipe.currentUserRating >= i ? 'opacity-100' : 'opacity-30' %>">ðŸ˜‹</span>
            </button>
          <% } %>
          <span class="text-[10px] text-violet-400 ml-1">
            <%= recipe.hasCurrentUserRated ? 'Clique para alterar' : 'Clique para avaliar' %>
          </span>
        </div>
      </div>

      <!-- AvaliaÃ§Ã£o do parceiro -->
      <div class="flex flex-col gap-1">
        <span class="text-[10px] text-violet-300 font-medium">AvaliaÃ§Ã£o do parceiro</span>
        <div class="flex items-center gap-1">
          <% for (let i = 1; i <= 5; i++) { %>
            <span class="text-lg sm:text-xl <%= recipe.partnerRating >= i ? 'opacity-100' : 'opacity-30' %>">ðŸ˜‹</span>
          <% } %>
          <% if (!recipe.hasPartnerRated) { %>
            <span class="text-[10px] text-violet-500 ml-1">Ainda nÃ£o avaliou</span>
          <% } %>
        </div>
      </div>

      <!-- MÃ©dia -->
      <% if (recipe.hasCurrentUserRated && recipe.hasPartnerRated) { %>
        <div class="text-center pt-2 border-t border-violet-700/30">
          <span class="text-[10px] text-violet-300">MÃ©dia: </span>
          <span class="text-sm font-bold text-yellow-400">
            <%= ((recipe.currentUserRating + recipe.partnerRating) / 2).toFixed(1) %>
          </span>
          <span class="text-xs">ðŸ˜‹</span>
        </div>
      <% } %>
    </div>

    <% if (recipe.currentUserComment || recipe.partnerComment) { %>
      <div class="mt-3 pt-3 border-t border-violet-700/30">
        <div class="flex items-center gap-1 mb-1">
          <svg class="w-3 h-3 text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
          <span class="text-[10px] text-violet-400">HÃ¡ comentÃ¡rios</span>
        </div>
      </div>
    <% } %>
  </div>
</div>
